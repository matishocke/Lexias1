@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;

    // Count all children directly under the root node
    var totalProjects = Model.Root().Children().Count();  

    IPublishedContent root = Model.Root();
    var colorGradient1 = root.Value("colorSettingsGradientStart");
    var colorGradient2 = root.Value("colorSettingsGradientEnd");
    var colorAccent1 = root.Value("colorSettingsAccent1");
    var colorAccent2 = root.Value("colorSettingsAccent2");
    if (colorGradient1 == "" || colorGradient1 == null) { colorGradient1 = "#1b264f"; };
    if (colorGradient2 == "" || colorGradient2 == null) { colorGradient2 = "#3e4c9f"; };
    if (colorAccent1 == "" || colorAccent1 == null) { colorAccent1 = "#e9b1aa"; };
    if (colorAccent2 == "" || colorAccent2 == null) { colorAccent2 = "#f5c0ba"; };

}





@*BOOOOOOOODY*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>LexiasWebSite</title>
    <meta name="description" content="Umbraco Training Baseline">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <!-- External CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@("@")5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@("@")4.1.0-rc.0/dist/css/select2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightcase/2.5.0/css/lightcase-no-breakpoint.css">
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/mystyles.css">
    <link rel="stylesheet" href="https://cdn.linearicons.com/free/1.0.0/icon-font.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" crossorigin="anonymous">
    
    <!-- Modernizr JS for IE8 support of HTML5 elements and media queries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
   
    @* //toastr// added here *@
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />  

</head>






<body data-spy="scroll" data-target="#navbar" class="static-layout">
    <nav id="header-navbar" class="navbar navbar-expand-lg py-1 justify-content-center">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center text-white" href="/">
            <h3 class="font-weight-bolder mb-3 company-name">
                <span>@Model.Value("companyName", fallback: Fallback.ToAncestors)</span>
            </h3>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-nav-header" aria-controls="navbar-nav-header" aria-expanded="false" aria-label="Toggle navigation">
            <span class="lnr lnr-menu"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-nav-header">
            <ul class="navbar-nav lx-auto">


                <!-- Children in NavBar -->
                @foreach (var child in Model.Root().Children())
                {
                    if (child.Name != "Collections" && child.Name != "WhitepaperPage" && child.Name != "Coupon")
                    {
                        <li class="nav-item">
                             <a class="nav-link" href="@child.Url()">@child.Name</a>
                        </li>
                    }
                }


                <!-- Existing Language Dropdown -->
                <li class="nav-item lang-dropdown clickable" onclick="langDropdown()">
                    <span class="nav-link">EN</span>
                    <div class="lang-dropdown-content" style="visibility:hidden" id="langDropdown">
                        We will add more here later
                    </div>
                </li>



                <!-- Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-grid-fill"></i>
                    </a>

                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                             
                        <!-- specific items like doable in dropdown -->
                        @foreach (var child in Model.Root().Children())
                        {
                            if (child.Name == "Collections" || child.Name == "Coupon")
                            {
                                <li><a class="dropdown-item" href="@child.Url()">@child.Name</a></li>
                            }
                        }

                        <!-- line -->
                        <li><hr class="dropdown-divider"></li>

                        <!-- specific items like documantable in dropdown -->
                        @foreach (var child in Model.Root().Children())
                        {
                            if (child.Name == "WhitepaperPage")
                            {
                                <li><a class="dropdown-item" href="@child.Url()">@child.Name</a></li>
                            }
                        }  

                    </ul>
                </li>


            </ul>
        </div>
    </div>
</nav>
    

 



<div class="content-wrapper">
        @RenderBody()
</div>

@await Html.PartialAsync("_Notifications")





@*FOOOOOOOOOOOTER*@


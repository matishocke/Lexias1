    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.isotope/3.0.6/isotope.pkgd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightcase/2.5.0/js/lightcase.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/3.0.0/noframework.waypoints.min.js"></script>
    <script src="https://unpkg.com/aos@("@")next/dist/aos.js"></script>
    <!-- Main JS -->
    <script src="/scripts/app.js "></script>





    
    <!-- inline CSS so we can style according to the colors picked by users -->
    <style>


        .jumbotron {
            color: #fff;
        }

        .jumbotron:before {
            background: none;
        }


        .company-name {
             font-size: 5rem; /* Adjust the size as desired */
        }


        @*NavBarrrrrrr*@
        #header-navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000; /* Sørger for, at navbar forbliver øverst */
            background-color: rgba(0, 0, 0, 1); /* Tilføj en baggrundsfarve */
            transition: background-color 0.3s ease; /* Glidende overgang, når du scroller */
        }


        

        
        body {
            padding-top: 60px; /* Tilføj polstring, så indholdet ikke starter under navbaren */
        }

        
        .content-wrapper {
            padding-top: 80px; /* Adjust based on navbar height bring the renderbody below navbar*/
        }  


        .navbar-nav .nav-link {
                color: white; /* Set the text color to white */
        }

        .navbar-nav .nav-link:hover {
                color: @colorAccent1; /* Optional: Change hover color to accent color */
        }


        .rectangle-1, .rectangle-2 {
            background: @colorAccent1;
            background: -webkit-linear-gradient(to right, @colorAccent1, @colorAccent1);
            background: linear-gradient(to right, @colorAccent1, @colorAccent2);
        }

        .int-link:hover, .clickable:hover, .footer-icon:hover, .uppercase a:hover {
            color: @colorGradient1;
        }

        .owl-dot span {
            background-color: @colorGradient2;
        }

        .featured {
            border: 2px dashed @colorGradient2;
        }

        .feature-item a:hover {
            color: @colorAccent1;
        }


        .uppercase a, .testi-icon, .clickable, .footer-icon, .blog-share, .blog-tag {
            color: @colorGradient2;
        }

        .blog-title p {
            color: @colorGradient2;
            outline: 1px solid @colorGradient2;
        }

        .blog-share:hover, .blog-tag span:hover {
            color: @colorGradient1;
        }

        .form-control:focus {
            border-color: @colorAccent1;
        }

        .side-nav a {
            color: @colorGradient2;
        }

        .nav-current {
            color: @colorGradient1 !important;
            padding: 0 2px;
            outline: 1px solid @colorGradient1;
        }



        .btn-primary {
            background-color: @colorGradient2;
            border-color: @colorGradient2;
        }

            .btn-primary:hover {
                background-color: @colorGradient1;
                border-color: @colorGradient1;
            }

        .owl-dot.active > span {
            box-shadow: 0 0 0 2px @colorGradient2;
        }

        .overlay:before {
            background: @colorGradient1;
            background: -webkit-linear-gradient(to right, @colorGradient1, @colorGradient2);
            background: linear-gradient(to right, @colorGradient1, @colorGradient2);
        }




                /* Ensure body and html take full height */
        html, body {
            height: 100%;
            margin: 0;
        }

        /* Make content-wrapper take up the remaining space */
        .content-wrapper {
            min-height: calc(100vh - 200px); /* Adjust the '200px' based on your navbar and footer height */
            padding-bottom: 40px; /* Same as footer height */
        }

        /* Footer styles */
        footer.mastfoot {
            position: relative;
            bottom: 0;
            width: 100%;
            height: 40px; /* Adjust to your footer height */
            background-color: white; /* Adjust based on color needs */
        }
    </style>

</body>
</html>




@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "master.cshtml";
}


@{
	var selection = Umbraco.Content(Guid.Parse("3eade13b-45cf-4fb7-80d9-1af87cc436d8"))
    .Children()
    .Where(x => x.IsVisible());
}
<div class="collection-section">
    <h2 class="collection-title">Available Collections</h2>

    <ul class="collection-list">
        @foreach (var item in selection)
        {
            <li class="collection-item">
                <a href="@item.Url()" class="collection-link">@item.Name()</a>
            </li>
        }
    </ul>

    <div class="collection-summary">
        <p>Total Number of Collections: <strong>@selection.Count()</strong></p>
    </div>
</div>



<style>
    .collection-section {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 20px auto;
    }
    .collection-title {
        text-align: center;
        color: #007bff;
        margin-bottom: 15px;
    }
    .collection-list {
        list-style: none;
        padding: 0;
        margin-bottom: 20px;
    }
    .collection-item {
        margin: 10px 0;
    }
    .collection-link {
        color: #343a40;
        text-decoration: none;
        font-weight: 500;
    }
    .collection-link:hover {
        color: #007bff;
        text-decoration: underline;
    }
    .collection-summary {
        text-align: center;
        font-size: 1.1rem;
    }
</style>


